<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XVendas"
             x:Class="XVendas.MainPage"
             Title="XVendas">
    <StackLayout x:Name="Stack" Padding="15" Spacing="15">
        <Button x:Name="Clientes"   Text="Clientes"                         Clicked="ClientesClicked"/>
        <Button x:Name="Produtos"   Text="Produtos"                         Clicked="ProdutosClicked"/>
        <Button x:Name="Vendas"     Text="Realizar Vendas"                  Clicked="VendasClicked"/>
        <Button x:Name="ConsPedEmi" Text="Consultar Pedidos por Emissão"    Clicked="ConsPedEmiClicked"/>
        <Button x:Name="ConsPedCli" Text="Consultar Pedidos por Cliente"    Clicked="ConsPedCliClicked"/>
        <Button x:Name="ConsEstCri" Text="Consultar Estoque Crítico"        Clicked="ConsEstCriClicked"/>
        <Button x:Name="Sincronizar" Text="Sincronizar Dados com Servidor"  Clicked="SincronizarClicked"/>
    </StackLayout>
</ContentPage>